<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nandogami.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_chatHistoryFragment"
            app:destination="@id/chatHistoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.nandogami.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.nandogami.ui.profile.ProfileFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/chatHistoryFragment"
        android:name="com.example.nandogami.ui.ChatHistoryFragment"
        android:label="Chat History"
        tools:layout="@layout/fragment_chat_history" />

</navigation>